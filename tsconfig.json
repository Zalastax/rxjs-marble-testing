{
    "compilerOptions": {
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "strictNullChecks": true,
        "declaration": true,
        "moduleResolution": "node",
        "target": "es5",
        "lib": [
            "es5",
            "es2015.iterable",
            "es2015.collection",
            "es2015.promise",
            "dom"
        ],
        "outDir": "lib"
    },
    "exclude": [
        "node_modules",
        "bower_components",
        "lib"
    ]
}
